<% layout("/layouts/boilerplate.ejs") %>


    <body>
        <div class="row">
            <div class="col-8">
                <h2>Create a New Listing</h2>
                <form action="/listings" method="post" novalidate class="needs-validation">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" placeholder="Add a catchy title" name="listing[title]"
                            class="form-control" required>
                        <div class="invalid-feedback">Please enter the title</div>
                    </div>

                    <br><br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter the description</div>
                    </div>
                    <br><br>

                    <div>
                        <label for="image" class="form-label">Image</label>
                        <input type="text" id="image" placeholder="Enter image url/link" name="listing[image]"
                            class="form-control">
                    </div>

                    <br><br>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" placeholder="1200" name="listing[price]"
                                class="form-control" required>
                            <div class="invalid-feedback">Please enter the price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" placeholder="India" name="listing[country]"
                                class="form-control" required>
                            <div class="invalid-feedback">Country name sholud be valid </div>
                        </div>
                    </div>

                    <br><br>
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" placeholder="Jaipur, Rajasthan" name="listing[location]"
                            class="form-control" required>
                        <div class="invalid-feedback">Location sholud be valid</div>
                    </div>

                    <br><br>
                    <button class="btn" style="margin-bottom: 1rem;background-color: #fe424d;color: #fff;">Add</button>
                </form>

            </div>
        </div>
    </body>
<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8">
                <h2>Edit your Listing</h2>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate
                    class="needs-validation">
                    <div>
                        <div>
                            <label for="title" class="form-label">Title</label>
                            <input type="text" value="<%= listing.title%>" name="listing[title]" class="form-control"
                                required>
                        </div>
                        <br><br>
                        <div>
                            <label for="description" class="form-label">Descriptin</label>
                            <textarea type="text" name="listing[description]" class="form-control"
                                required><%= listing.description %></textarea>
                        </div>
                        <br><br>
                        <div>
                            <label for="image" class="form-label">Image</label>
                            <input type="text" value="<%= listing.image.url%>" name="listing[image]"
                                class="form-control" required>
                        </div>
                        <br><br>
                        <div>
                            <label for="price" class="form-label">Price</label>
                            <input type="number" value="<%= listing.price%>" name="listing[price]" class="form-control"
                                required>
                        </div>
                        <br><br>
                        <div>
                            <label for="country" class="form-label">Country</label>
                            <input type="country" value="<%= listing.country%>" name="listing[country]"
                                class="form-control" required>
                        </div>
                        <br><br>
                        <div>
                            <label for="location" class="form-label">Location</label>
                            <input type="location" value="<%= listing.location%>" name="listing[location]"
                                class="form-control" required>
                        </div>
                    </div>
                    <br><br>
                    <button class="btn btn-danger px-4 py-2 fw-bold">Edit</button>
                </form>
            </div>
        </div>
    </body>